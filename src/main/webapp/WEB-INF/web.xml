<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>simpleServlet</servlet-name>
    <servlet-class>pl.sdacademy.SimpleServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>simpleServletWithLogger</servlet-name>
    <servlet-class>pl.sdacademy.SimpleServletWithLogger</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>dodaj</servlet-name>
    <servlet-class>pl.sdacademy.DodajServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>dodaj</servlet-name>
    <url-pattern>/dodajLiczby</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>simpleServlet</servlet-name>
    <url-pattern>/hello.html</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>simpleServletWithLogger</servlet-name>
    <url-pattern>/hello2</url-pattern>
  </servlet-mapping>

</web-app>
